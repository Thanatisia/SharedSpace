#
# General Functions
#

function massmake()
{
    #
    # Wrapper for mkdir/touch
    # A mass file/folder maker with
    #   'touch' for files and 
    #   'mkdir -p' for folders
    #
    folders=($1)
	files=()
    for fldrs in "${folders[@]}"; do
		# DEBUGGING: echo "Folder: $fldrs"
        if [ ! -d $fldrs ]; then
			# Check if folder exists
			# If folder does not exist: Make directory
			mkdir -p $fldrs
		fi
	done 

	for file in "${files[@]}"; do
		if [ -f $file ]; then
			# Check if file exists
			touch $file
		fi
	done
}

function mkdef()
{
	# Make Defaults
	# mkdef
	folders=(
		~/.tmp
		~/.logs
		~/.scripts/libraries
		~/Media/Screenshot
		~/Templates
	)
	files=()
	for fldrs in "${folders[@]}"; do
		if [ ! -d $fldrs ]; then
			# Check if folder exists
			# If folder does not exist: Make directory
			mkdir -p $fldrs
		fi
	done 

	for file in "${files[@]}"; do
		if [ -f $file ]; then
			# Check if file exists
			touch $file
		fi
	done
}


